  --><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.icgc.dcc</groupId>
    <artifactId>song</artifactId>
    <packaging>pom</packaging>
    <version>0.3.10-SNAPSHOT</version>
    <modules>
        <module>song-core</module>
        <module>song-server</module>
        <module>song-client</module>
        <module>song-importer</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.2.RELEASE</version>
    </parent>

    <repositories>
        <repository>
            <id>dcc-releases</id>
            <url>https://artifacts.oicr.on.ca/artifactory/dcc-release</url>
        </repository>
        <repository>
            <id>dcc-snapshot</id>
            <url>https://artifacts.oicr.on.ca/artifactory/dcc-snapshot</url>
        </repository>
        <repository>
          <id>Atlassian 3rd Party</id>
          <url>https://maven.atlassian.com/3rdparty/</url>
        </repository>
        <repository>
            <id>osssonatype</id>
            <name>OSS Sonatype</name>
            <url>https://repo1.maven.org/maven2/</url>
            <layout>default</layout>
        </repository>
        <repository>
            <id>jcenter-snapshots</id>
            <name>jcenter</name>
            <url>https://jcenter.bintray.com/</url>
        </repository>
    </repositories>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>${postgresql.version}</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.assertj</groupId>
                <artifactId>assertj-core</artifactId>
                <version>${assertj.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.assertj</groupId>
                <artifactId>assertj-guava</artifactId>
                <version>${assertj-guava.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <defaultGoal>install</defaultGoal>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                    <inherited>true</inherited>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                        <showWarnings>true</showWarnings>
                    </configuration>
                </plugin>

                <!-- Test -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven-surefire-plugin.version}</version>
                    <configuration>
                        <forkCount>1</forkCount>
                        <reuseForks>false</reuseForks>
                        <argLine>-Xms256m -Xmx1g</argLine>
                        <redirectTestOutputToFile>${test.redirectTestOutputToFile}</redirectTestOutputToFile>
                        <useFile>${test.useFile}</useFile>
                        <systemProperties>
                            <java.awt.headless>true</java.awt.headless>
                        </systemProperties>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>delombok</id>
            <properties>
                <generateSources.skipDelombok>false</generateSources.skipDelombok>
            </properties>
        </profile>
        <profile>
            <id>jenkins</id>
            <properties>
                <test.redirectTestOutputToFile>false</test.redirectTestOutputToFile>
                <test.useFile>false</test.useFile>
            </properties>
        </profile>
        <profile>
            <id>release</id>
            <properties>
                <package.attach>true</package.attach>
            </properties>
        </profile>
    </profiles>

    <properties>
        <!-- Versions - DCC -->
        <dcc-common.version>4.3.8</dcc-common.version>

        <!-- Versions - Spring -->
        <spring.version>4.3.3.RELEASE</spring.version>
        <!-- Versions - Spring Security -->
        <spring-security.version>4.1.3.RELEASE</spring-security.version>

        <!-- Versions - Spring Boot -->
        <spring-boot.version>1.5.2.RELEASE</spring-boot.version>
        <!-- Versions - Spring Boot - Maven -->
        <spring-boot-maven-plugin.version>${spring-boot.version}</spring-boot-maven-plugin.version>
        <!-- Versions - Spring Boot - Slf4j -->
        <slf4j.version>1.7.21</slf4j.version>
        <!-- Versions - Spring Boot - Logging -->
        <logback.version>1.1.7</logback.version>
        <!-- Versions - Spring Boot - H2 -->
        <h2.version>1.4.192</h2.version>

        <lombok.version>1.16.14</lombok.version>

        <jdbi.version>2.41</jdbi.version>

        <!-- Versions - Spring Boot - Jackson -->
        <jackson.version>2.9.4</jackson.version>

        <postgresql.version>42.2.1</postgresql.version>
        <networknt.version>0.1.5</networknt.version>

        <!-- Plugins -->
        <test.redirectTestOutputToFile>true</test.redirectTestOutputToFile>
        <test.useFile>true</test.useFile>
        <assertj.version>3.5.2</assertj.version>
        <junit.version>4.12</junit.version>
        <assertj-guava.version>3.1.0</assertj-guava.version>
    </properties>

</project>
