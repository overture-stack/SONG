{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sequencingRead",
  "type": "object",
  "required": [ "experiment"],
  "properties": {
    "experiment": {
      "type": "object",
      "required": [
        "libraryStrategy"
      ],
      "properties": {
        "aligned": {
          "type": ["boolean", "null"]
        },
        "alignmentTool": {
          "type": ["string", "null"]
        },
        "insertSize": {
          "type": ["integer", "null"]
        },
        "libraryStrategy": {
          "type": "string",
          "enum": [
            "WGS",
            "WXS",
            "RNA-Seq",
            "ChIP-Seq",
            "miRNA-Seq",
            "Bisulfite-Seq",
            "Validation",
            "Amplicon",
            "Other"
          ]
        },
        "pairedEnd": {
          "type": [ "boolean", "null"]
        },
        "referenceGenome": {
          "type": ["string", "null"]
        }
      }
    }
  }
}

